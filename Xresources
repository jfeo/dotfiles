! urxvt
! disable keycap picture mode
URxvt.iso14755:    false
URxvt.iso14755_52: false

! font settings
URxvt*scrollBar:       false
URxvt*scrollBar_right: false
URxvt.font:            xft:Iosevka:pixelsize=16:antialias=true:regular
URxvt.boldFont:        xft:Iosevka:pixelsize=16:antialias=true:medium
URxvt.italic:          xft:Iosevka:pixelsize=16:antialias=true:regular oblique

! Plugins
URxvt.perl-ext-common: resize-font

xterm*dynamicColors: true
urxvt*dynamicColors: on

! home and end keys
URxvt*keysym.Home: \033[1~
URxvt*keysym.End:  \033[4~

! change font size
!URxvt.resize-font.smaller: C-minus
!URxvt.resize-font.bigger:  C-plus
URxvt.resize-font.reset:   C-equal
URxvt.resize-font.show:    C-question

! cursor
Xcursor.theme:      Vanilla-DMZ
Xcursor.theme_core: true
Xcursor.size:       0

*background: #000000

! do not scroll with output
URxvt*scrollTtyOutput: false

! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true

! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true

URxvt.colorIT:      #FF0000
URxvt.colorBD:      #22DD22
URxvt.colorUL:      #0000FF
