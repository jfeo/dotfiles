# shortcuts

alias ..='cd ../'
alias spac='sudo pacman -S'
alias sspac='pacman -Ss'
alias rpac='sudo pacman -R'
alias rspac='sudo pacman -Rs'
alias sypac='sudo pacman -Sy'
alias syupac='sudo pacman -Syu'
alias printm1='lpr -H print.diku.dk:631/ m1a'
# modified commands
alias grep='grep --color=auto'
alias halt='sudo shutdown -h now'
alias reboot='sudo shutdown -r now'
alias ls='ls --color'
