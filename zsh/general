HISTFILE=/home/$USER/.cache/zsh_histfile
HISTSIZE=1000
SAVEHIST=10000

bindkey -v

bindkey '^P' up-history
bindkey '^N' down-history
bindkey '^?' backward-delete-char
bindkey '^h' backward-delete-char
bindkey '^w' backward-kill-word
bindkey '^r' history-incremental-search-backward

zstyle :compinstall filename '/etc/zshrc'

autoload -Uz compinit promptinit colors && colors && colors
compinit
promptinit
setopt correct
setopt histignoredups
zstyle ':completion:*' menu select

export EDITOR=vim
export BROWSER=chromium
export TEXMFHOME=$HOME/.texmf

source /usr/share/doc/pkgfile/command-not-found.zsh

# Setting path variable
export PATH="$PATH:/home/feo/bin:/home/feo/desk:/home/feo/games:/home/feo/uni/ov/fasto/bin:/home/feo/uni/osm/bin"
echo -e "Path: $PATH\ngeneral" >> ~/.log

if [ -f "/usr/lib/libstderred.so" ]; then
    export LD_PRELOAD="/usr/lib/libstderred.so"
fi


## Keybindings
bindkey "^[[A" history-beginning-search-backward
bindkey "^[[B" history-beginning-search-forward

bindkey "\e[1~" beginning-of-line
bindkey "\e[4~" end-of-line
bindkey "\e[5~" beginning-of-history
bindkey "\e[6~" end-of-history
bindkey "\e[3~" delete-char
bindkey "\e[2~" quoted-insert
bindkey "\e[5C" forward-word
bindkey "\eOc" emacs-forward-word
bindkey "\e[5D" backward-word
bindkey "\eOd" emacs-backward-word
bindkey "\ee[C" forward-word
bindkey "\ee[D" backward-word
bindkey "^H" backward-delete-word
# for rxvt
bindkey "\e[8~" end-of-line
bindkey "\e[7~" beginning-of-line
## for non RH/Debian xterm, can't hurt for RH/DEbian xterm
#bindkey "\eOH" beginning-of-line
#bindkey "\eOF" end-of-line
## for freebsd console
#bindkey "\e[H" beginning-of-line
#bindkey "\e[F" end-of-line
## completion in the middle of a line
#bindkey '^i' expand-or-complete-prefix

manpdf(){
  man -t "$1" | ps2pdf - "$1.pdf"
}

function cdls {
    builtin cd "$@" && ls --color=always
}
